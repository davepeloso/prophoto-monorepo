{
    "name": "prophoto/notifications",
    "description": "Notification system for ProPhoto - emails, templates, delivery tracking",
    "type": "library",
    "license": "MIT",
    "authors": [{"name": "ProPhoto", "email": "dev@prophoto.com"}],
    "require": {
        "php": "^8.2",
        "illuminate/support": "^11.0|^12.0",
        "illuminate/mail": "^11.0|^12.0",
        "illuminate/notifications": "^11.0|^12.0",
        "prophoto/contracts": "@dev",
        "prophoto/tenancy": "@dev"
    },
    "require-dev": {"orchestra/testbench": "^9.0", "pestphp/pest": "^2.0"},
    "autoload": {"psr-4": {"ProPhoto\\Notifications\\": "src/"}},
    "autoload-dev": {"psr-4": {"ProPhoto\\Notifications\\Tests\\": "tests/"}},
    "extra": {"laravel": {"providers": ["ProPhoto\\Notifications\\NotificationsServiceProvider"]}},
    "config": {"sort-packages": true, "allow-plugins": {"pestphp/pest-plugin": true}},
    "minimum-stability": "dev",
    "prefer-stable": true
}
