{
    "name": "prophoto/payments",
    "description": "Payment processing for ProPhoto - Stripe integration, webhooks, refunds",
    "type": "library",
    "license": "MIT",
    "authors": [{"name": "ProPhoto", "email": "dev@prophoto.com"}],
    "require": {
        "php": "^8.2",
        "illuminate/support": "^11.0|^12.0",
        "illuminate/database": "^11.0|^12.0",
        "stripe/stripe-php": "^15.0",
        "prophoto/contracts": "@dev",
        "prophoto/invoicing": "@dev"
    },
    "require-dev": {"orchestra/testbench": "^9.0", "pestphp/pest": "^2.0"},
    "autoload": {"psr-4": {"ProPhoto\\Payments\\": "src/"}},
    "autoload-dev": {"psr-4": {"ProPhoto\\Payments\\Tests\\": "tests/"}},
    "extra": {"laravel": {"providers": ["ProPhoto\\Payments\\PaymentsServiceProvider"]}},
    "config": {"sort-packages": true, "allow-plugins": {"pestphp/pest-plugin": true}},
    "minimum-stability": "dev",
    "prefer-stable": true
}
